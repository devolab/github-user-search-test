{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noUnusedLocals": true, // https://www.youtube.com/watch?v=d56mG7DezGs minute 43
    "noUnusedParameters": true, // https://www.youtube.com/watch?v=d56mG7DezGs minute 43
    "noImplicitReturns": true, // https://www.youtube.com/watch?v=d56mG7DezGs minute 43
    "strictNullChecks": true, // https://www.youtube.com/watch?v=d56mG7DezGs minute 58:25
  },
  "include": [
    "vitest.config.ts",
    ".eslintrc.cjs",
    "src",
    "public/tests"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}